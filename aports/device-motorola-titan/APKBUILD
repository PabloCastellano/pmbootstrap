pkgname=device-motorola-titan
pkgver=1
pkgrel=8
pkgdesc="Motorola Moto G 2014"
url="https://github.com/postmarketOS"
arch="noarch"
license="MIT"
depends="linux-motorola-titan mkbootimg"
makedepends=""
install=""
subpackages=""
source="
    deviceinfo
    initfs-hook.sh
    firmware.sh
    profile.sh
    50-firmware.rules
    90-android-touch-dev.rules"
options="!check"

build() {
	return 0
}

package() {
	install -D -m644 "$srcdir"/deviceinfo \
		"$pkgdir"/etc/deviceinfo
	install -D -m644 "$srcdir"/50-firmware.rules \
		"$pkgdir"/etc/udev/rules.d/50-firmware.rules
	install -D -m644 "$srcdir"/90-android-touch-dev.rules \
		"$pkgdir"/etc/udev/rules.d/90-android-touch-dev.rules
	install -D -m644 "$srcdir"/initfs-hook.sh \
		"$pkgdir"/etc/postmarketos-mkinitfs/hooks/00-${pkgname}.sh
	install -D -m755 "$srcdir"/firmware.sh \
		"$pkgdir"/usr/bin/firmware.sh
	install -D -m644 "$srcdir"/profile.sh \
		"$pkgdir"/etc/profile.d/00-$pkgname.sh
}

